{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/api/*": ["./src/api/*"],
      "@profile/*": ["./src/profile/*"],
      "@settings/*": ["./src/settings/*"],
      "@users/*": ["./src/users/*"],
      "@auth/*": ["./src/auth/*"],
      "@sprint/*": ["./src/sprint/*"],
      "@timer/*": ["./src/timer/*"],
      "@client/*": ["./src/client/*"],
      "@utils/*": ["./src/global/utils/*"],
      "@reducers/*": ["./src/global/redux/reducers/*"],
      "@global/*": ["./src/global/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
